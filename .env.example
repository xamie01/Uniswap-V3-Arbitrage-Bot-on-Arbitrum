# Copy this file to .env and fill in real values. Do NOT commit .env with secrets.

# Wallet / Keys
PRIVATE_KEY=0xYOUR_PRIVATE_KEY_HERE

# RPC endpoints
# Sepolia testnet RPC used by the bot (v3bot.js uses ETH_SEPOLIA_RPC_URL)
ETH_SEPOLIA_RPC_URL=https://eth-sepolia.alchemyapi.io/v2/your_sepolia_key

# Optional: mainnet Arbitrum RPC if you adapt the code
ETH_ARBITRUM_RPC_URL=https://arb-mainnet.g.alchemy.com/v2/your_mainnet_key

# Trading configuration
# Token used for flashloans (WETH on Arbitrum)
ARB_FOR=0x82af49447d8a07e3bd95bd0d56f35241523fbab1

# Comma-separated list of token addresses to monitor against ARB_FOR
ARB_AGAINST_TOKENS=0xTokenAAddress,0xTokenBAddress,0xTokenCAddress

# Minimum percent difference to consider (e.g., 0.1 == 0.1%)
PROFIT_THRESHOLD=0.1

# Flash loan fee (expressed as decimal, default ~0.0009 = 0.09%)
FLASH_LOAN_FEE=0.0009

# Telegram notifications
TELEGRAM_BOT_TOKEN=123456:ABC-DEFxxxxxxxxxxxx
TELEGRAM_CHAT_ID=123456789

# Optional: tuning
# SLIPPAGE_TOLERANCE is hard-coded in v3bot.js (50n = 0.5%). Change there